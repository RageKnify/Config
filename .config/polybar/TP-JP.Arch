; polybar config for Thinkpad
[bar/barBottom]
monitor = ${env:MONITOR:eDP-1}

modules-left = i3 xkeyboard mpd pulseaudio
modules-right = filesystem0 filesystem1 cpu temperature memory wlan battery date updates-arch

[module/i3]
label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-overline = ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-overline = ${self.label-focused-overline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

ws-icon-0 = 1;Ôâ®
ws-icon-1 = 2;ÔÑ°
ws-icon-2 = 3;ÔÑ†
ws-icon-3 = 4;ÔáÅ
ws-icon-4 = 5;Ôéí
ws-icon-default = ÔÑ†

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600

format-online = <icon-prev> <icon-stop> <toggle> <icon-next> <label-song>
icon-active-font = 1
icon-prev = "ÔÅä "
icon-stop = "ÔÅç"
icon-play = "ÔÅã"
icon-pause = "ÔÅå"
icon-next = " ÔÅé"
format-offline = üéú mpd is offline

label-song-maxlen = 40
label-song-ellipsis = true

[module/updates-arch]
type = custom/script
exec = if [ -f "/tmp/updates_total" ] && [ $(wc -l < /tmp/updates_total) -ne "0" ]; then echo -n " "; wc -l < /tmp/updates_total; fi
interval = 60
format-prefix = Ôã±
format-overline = ${env:BASE08}

[module/pulseaudio]
type = internal/pulseaudio

sink = alsa_output.pci-0000_00_1f.3.analog-stereo

