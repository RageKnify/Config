[colors]

;background = ${xrdb:color0:#222}
background = ${env:BASE00}
background-alt = ${env:BASE01}
;foreground = ${xrdb:color7:#222}
foreground = ${env:BASE05}
foreground-alt = ${env:BASE06}
primary = ${env:BASE09}
secondary = ${env:BASE0A}
alert = ${env:BASE08}

[bar/barBottom]
width = 100%
height = 22
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

module-margin-left = 0
module-margin-right = 1

font-0 = "Fira Sans:pixelsize=14;4"
font-1 = "Font Awesome 5 Free:style=regular;4"
font-2 = "Font Awesome 5 Free:style=solid;4"
font-3 = "Font Awesome 5 Brands,Font Awesome 5 Brands Regular:style=Regular;4"

tray-position = right
tray-padding = 1
padding = 0
;tray-transparent = true

;wm-restack = i3

bottom = false

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true


[module/xkeyboard]
type = internal/xkeyboard
;blacklist-0 = num lock

format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-overline = ${colors.secondary}

label-layout = %layout%
label-layout-overline = ${colors.secondary}

label-indicator-on=%name%
label-indicator-on-padding = 2
label-indicator-on-margin = 1
label-indicator-on-foreground = ${colors.background}
label-indicator-on-background = ${colors.secondary}
label-indicator-on-overline = ${colors.secondary}

[module/filesystem0]
type = internal/fs
interval = 30

mount-0 = /

; #eee8d5 is base06-light foreground / foreground-alt
label-mounted = %{F#eee8d5}%mountpoint%%{F-}: %percentage_used%%
format-mounted = <label-mounted>
format-mounted-overline = ${env:BASE0F}

[module/filesystem1]
type = internal/fs
interval = 30

mount-0 = /home

; #eee8d5 is base06-light foreground / foreground-alt
label-mounted = %{F#eee8d5}%mountpoint%%{F-}: %percentage_used%%
format-mounted = <label-mounted>
format-mounted-overline = ${env:BASE0F}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-overline = ${env:BASE0E}
label = %percentage%%

[module/temperature]
type = internal/temperature
thermal-zone = 4
warn-temperature = 60

format = <ramp> <label>
format-overline = ${env:BASE0E}
format-warn = <ramp> <label-warn>
format-warn-overline = ${self.format-overline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${env:BASE08}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-foreground = ${colors.foreground-alt}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-overline = ${env:BASE0C}
label = %gb_used%/%gb_total%

[module/date]
type = internal/date
interval = 5

date = "%d %b"
date-alt = "%a %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-overline = ${env:BASE08}

label = %date% %time%

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

