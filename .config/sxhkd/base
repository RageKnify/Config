# sxhkdrc

# launch terminal
mod4 + Return
	alacritty

# launch dmenu_run
mod4 + d
	dmenu_run

# exit i3 (logs out of X session)
mod4 + shift + e
	prompt.sh "Exit i3?" 'i3-msg exit'

# shutdown
mod4 + shift + x
	prompt.sh "Shutdown?" 'shutdown now'

# update config files
mod4 + shift + c
	update_configs.sh

